<div class="post-contenido">
	  <h1><%= post.title %></h1>
	  <h3><%= post.body %></h3>
</div>

<div class="comentarios">
	<% post.comments.each do |comment| %>
	 <hr>
		  <p>
		    <strong>Comment:</strong>
		    <%= comment.body %>
		  </p>
	  <hr>
	<% end %>
</div>

<h3>Add a comment:</h3>
<%= form_for([post, post.comments.build]) do |f| %>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', posts_path %>
| <%= link_to 'Edit', edit_post_path(post) %>