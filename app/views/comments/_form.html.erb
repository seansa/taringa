<%= form_for [@product, @comment], remote: true do |f| %>

	<% if @comment.errors.any? %>
		<div class="errors">
			<h3>Error!</h3>
			<ul>
				<% @comment.errors.full_messages.each do |error| %>
					<li><%= error %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<div class="field">
		<%= f.label :message %> <br>
		<%= f.text_area :message %>
	</div>

	<%= f.submit "Post this comment!" %>

<% end %>